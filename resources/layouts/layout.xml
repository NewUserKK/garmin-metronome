<layout id="MainLayout">
    <label
        id="bpmText"
        x="center"
        y="center"
        text="@Strings.bpm"
        color="Graphics.COLOR_WHITE"
        font="Graphics.FONT_LARGE"
        justification="Graphics.TEXT_JUSTIFY_CENTER" />

    <button
        id="playbackButton"
        class="PlaybackButton"
        x="center"
        y="60%"
        width="96"
        height="96"
    >
        <state id="stateDefault" bitmap="@Drawables.PlaybackPlayIcon" />
    </button>
</layout>
