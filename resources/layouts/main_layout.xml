<layout id="MainLayout">
    <label
        id="bpmText"
        x="center"
        y="center"
        text="@Strings.bpm"
        color="Graphics.COLOR_WHITE"
        font="Graphics.FONT_LARGE"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />

    <button
        id="settingsButton"
        class="WatchUi.Button"
        x="center"
        y="25%"
        width="36"
        height="36"
        behavior="onSettingsClick"
    >
        <state id="stateDefault" bitmap="@Drawables.SettingsIcon" />
        <state id="stateHighlighted" bitmap="@Drawables.SettingsIcon" />
    </button>

    <button
        id="playButton"
        class="WatchUi.Button"
        x="center"
        y="60%"
        width="96"
        height="96"
        behavior="onPlaybackClick"
    >
        <state id="stateDefault" bitmap="@Drawables.PlayIcon" />
        <state id="stateHighlighted" bitmap="@Drawables.PlayIcon" />
    </button>

    <button
        id="stopButton"
        class="WatchUi.Button"
        x="center"
        y="60%"
        width="96"
        height="96"
        behavior="onPlaybackClick"
    >
        <state id="stateDefault" bitmap="@Drawables.StopIcon" />
        <state id="stateHighlighted" bitmap="@Drawables.StopIcon" />
    </button>
</layout>
